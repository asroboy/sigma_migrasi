package controller;

import java.math.BigDecimal;
import config.HibernateUtil;
import config.HibernateUtilXml;
import domain.DqTempValid;
import domain.DqTopConsis;
import java.math.BigDecimal;
import java.util.List;
import model.table.DqTempValidModel;
import model.table.DqTopConsisModel;
import org.hibernate.Criteria;
import org.hibernate.Session;
import org.hibernate.Transaction;
import org.hibernate.criterion.Order;
import org.hibernate.criterion.Restrictions;

/**
 *
 * @author wallet
 */
public class DqTempValidController {
    
    Session session;
    HibernateUtilXml hibernateUtilXml;

    public DqTempValidController() {
    }

    public DqTempValidController(Session session, HibernateUtilXml hibernateUtilXml) {
        this.session = session;
        this.hibernateUtilXml = hibernateUtilXml;
    }
        
    public BigDecimal getMaxDqTempValidId() {
       
        BigDecimal maxId = null;
        
        if (!session.isOpen()) {
            session = hibernateUtilXml.buildSession().openSession();
        }
        Transaction trx = session.beginTransaction();
        
        try {          
            if (!trx.isActive()) {
                trx.begin();
            }
                        
            Criteria criteria = session.createCriteria(DqTempValid.class);
            criteria.addOrder(Order.desc("id"));
            criteria.setMaxResults(1);
            List results = criteria.list();

            if (results.size() > 0) {
                maxId = ((DqTempValid) results.get(0)).getId();
            } else {
                //  maxId = 0;
            }

            trx.commit();

        } catch (Exception e) {
            trx.rollback();
            e.printStackTrace();
        }
        //session.close();
        
        return maxId;
    }
    
    public DqTempValid getDataById(BigDecimal id) {
        DqTempValid dq = new DqTempValid();
        
        if (!session.isOpen()) {
            session = hibernateUtilXml.buildSession().openSession();
        }
        Transaction trx = session.getTransaction();
        
        try {
            if (!trx.isActive()) {
                trx.begin();
            }

            Criteria criteria = session.createCriteria(DqTempValid.class);
            criteria.add(Restrictions.eq("dqTemporalAccuracyId", id));
            dq = (DqTempValid) criteria.uniqueResult();

            if (dq == null) {
                return null;
            }

            trx.commit();
        } catch (Exception e) {
            trx.rollback();
            e.printStackTrace();
        } finally { 
            //session.close();
        }

        return dq;
    }
    
    public String deletedDqTempValid(BigDecimal id) {
        DqTempValid dq = new DqTempValid();
        
        if (!session.isOpen()) {
            session = hibernateUtilXml.buildSession().openSession();
        }
        Transaction trx = session.beginTransaction();
        
        try {
            if (!trx.isActive()) {
                trx.begin();
            }

            Criteria criteria = session.createCriteria(DqTempValid.class);
            criteria.add(Restrictions.eq("id", id));
            dq = (DqTempValid) criteria.uniqueResult();

            session.delete(dq);
            trx.commit();
            
            return "deleted succesfully.....!!";
        } catch (Exception e) {
            trx.rollback();
            return e.getMessage();
        } finally { 
            //session.close();
        }
    }
    
    public String saveDqTempValid(DqTempValidModel mdModel) {
       
        DqTempValid dq = new DqTempValid();
        
         if (!session.isOpen()) {
            session = hibernateUtilXml.buildSession().openSession();
        }
        Transaction trx = session.getTransaction();
        
        try {
            if (!trx.isActive()) {
                trx.begin();
            }

            dq.setId(mdModel.getId());
            dq.setDqDataQualityId(mdModel.getDqDataQualityId());
            dq.setDqTemporalAccuracyId(mdModel.getDqTemporalAccuracyId());
            
            session.save(dq);
            trx.commit();
            
            return "saved successfully.....!!";
        } catch (Exception e) {
            trx.rollback();
            return e.getMessage();
        } finally { 
            //session.close();
        }
    }

    public String updateDqTempValid(BigDecimal id,DqTempValidModel mdModel) {
        
        DqTempValid dq = new DqTempValid();
        
         if (!session.isOpen()) {
            session = hibernateUtilXml.buildSession().openSession();
        }
        Transaction trx = session.beginTransaction();
        
        try {
            if (!trx.isActive()) {
                trx.begin();
            }

            Criteria criteria = session.createCriteria(DqTempValid.class);
            criteria.add(Restrictions.eq("id", id));
            dq = (DqTempValid) criteria.uniqueResult();

            dq.setDqDataQualityId(mdModel.getDqDataQualityId());
            dq.setDqTemporalAccuracyId(mdModel.getDqTemporalAccuracyId());

            session.update(dq);
            trx.commit();

            return "updated successfully.....!!";
        } catch (Exception e) {
            trx.rollback();
            return e.getMessage();
        } finally {
            //session.close();
        }
    }
}
